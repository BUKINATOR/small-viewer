<h1>Detail zaměstnance <em>{{employee.name}} {{employee.surname}}</em></h1>
<dl>
    {{#employee}}
        <dt>Jméno</dt>
        <dd>{{name}}</dd>

        <dt>Příjmení</dt>
        <dd>{{surname}}</dd>

        <dt>Zaměstnání</dt>
        <dd>{{job}}</dd>

        <dt>Výplata</dt>
        <dd>{{wage}}</dd>
    {{/employee}}

    {{#room}}
        <dt>Místnost</dt>
        <dd>
            <a href='/room/detail.php?room_id={{room_id}}'>{{name}}</a>
        </dd>
    {{/room}}
</dl>