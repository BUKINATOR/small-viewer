<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>{{#room.room_id}}
                        Upravit místnost{{/room.room_id}}{{^room.room_id}}Založit místnost{{/room.room_id}}</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="room_id" value="{{room.room_id}}">
                        <div class="form-group">
                            <label for="name">Název</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{room.name}}"
                                   required>
                            {{#errors.name}}
                                <div class="invalid-feedback">{{errors.name}}</div>{{/errors.name}}
                        </div>
                        <div class="form-group">
                            <label for="phone">Telefon</label>
                            <input type="text" class="form-control" id="phone" name="phone" value="{{room.phone}}">
                            {{#errors.phone}}
                                <div class="invalid-feedback">{{errors.phone}}</div>{{/errors.phone}}
                        </div>
                        <div class="form-group">
                            <label for="no">Číslo</label>
                            <input type="text" class="form-control" id="no" name="no" value="{{room.no}}" required>
                            {{#errors.no}}
                                <div class="invalid-feedback">{{errors.no}}</div>{{/errors.no}}
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Odeslat</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>